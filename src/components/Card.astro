---

export interface Props {
	title: string;
	body: string;
	href: ImageMetadata;
	
}
import { Image } from '@astrojs/image/components';


const { href, title, body } = Astro.props;
---


<div class="flex flex-col-reverse bg-slate-100 p-5	 shadow-sm">
	<div class=" mx-auto">
		<h2 class="text-center text-xl mt-4">{title}</h2>
		<p class="mt-1">{body}</p>
	</div>
	<Image loading="lazy" src={href} aspectRatio={"3:2"} quality={"low"} alt="nature">
	<!-- <Picture src={href} alt="nature"  widths={[320]}/> -->

</div>