            <div id="mapFooter" style="height: 304px;" ></div>
        </div>
        <div class="border-t border-slate-800 mx-auto mt-16 text-sm text-center text-slate-400 pt-5 w-320 sm:w-500 md:w-768 xl:w-1280">Â© Copyright {year} | astro-site.com | All right reserved.</div>
        

        
    </div>
    <script>
        const titlePage = document.querySelector("#footer-my");
        
        
        if (titlePage.dataset.title === "Contact"){
            var map = L.map('mapContact').setView([46.595, 7.907], 18);
            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
            }).addTo(map);
            var marker = L.marker([46.595, 7.907]).addTo(map);
        }

        var map = L.map('mapFooter').setView([46.595, 7.907], 18);
        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
        }).addTo(map);
        var marker = L.marker([46.595, 7.907]).addTo(map);

    </script>
</footer>