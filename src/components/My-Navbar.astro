---
import "./Navbar.css"
---
<header class="header flex-col justify-center items-center md:flex md:flex-row md:justify-between ">
    <div class="flex flex-row items-center justify-between shadow-md md:shadow-none ">
        <img src="/logo-no-background.png" class="w-224 py-5 logo ml-3" alt="">
        <div id="hamburger" class="mr-3 md:hidden ">
            <i class="fa-solid fa-bars  text-4xl "></i>
        </div>
    </div>
    <nav id="navbar" class="navbar open-nav-list hidden md:block md:mr-5 ">  <!-- hidden class is current no added -->
        <ul class="nav-list flex flex-col md:items-center gap-6 md:flex-row">
            <li>
                <a href="/">Home</a>
            </li>

            <li>
                <a href="/secPage">Page</a>
            </li>

            <li>
                <a href="/about">About</a>
            </li>

            <li>
                <a href="/contact">Contact</a>
            </li>

            <li class="flex items-center gap-x-5 md:ml-5">
                <i class="fa-brands text-3xl fa-facebook hover:text-red-500 my-transition"></i>
                <i class="fa-brands text-3xl fa-twitter hover:text-red-500 my-transition"></i>
                <i class="fa-brands text-3xl fa-instagram hover:text-red-500 my-transition"></i>
            </li>

        </ul>
    </nav> 
</header>
<script>
    let isHidden = true  
    const hamburger = document.getElementById("hamburger");
    const navbar = document.getElementById('navbar');
    hamburger.addEventListener("click", () => {
        if (isHidden){
            navbar.classList.remove("hidden")
            isHidden = false;
        }else{
            navbar.classList.add("hidden");
            isHidden = true;
        }
    })
    
</script>